@model BTL_ASP.NET_Nhom7.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var catalogy = (BTL_ASP.NET_Nhom7.Models.Catalogy)ViewBag.catalogy;
    var relatedProducts = (List<BTL_ASP.NET_Nhom7.Models.Product>)ViewBag.RelatedProducts;
}
<div class="content">
    <div class="content_top">
        <div class="">
            <p>Trang chủ >> @catalogy.CatalogyName</p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        <div class="cont-desc span_1_of_2">
            <div class="product-details">
                <div class="grid images_3_of_2">
                    <div id="container">
                        <div id="products_example">
                            <div id="products">
                                <div class="slides_container">
                                    <a href="#" target="_blank"><img src="~/Assets/User/images/@Model.Image" alt=" " /></a>
                                </div>
                                <ul class="pagination">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="desc span_3_of_2">
                    <h2>@Model.ProductName </h2>
                    <div class="price">
                        <p>Giá: <span>@(Model.PurchasePrice.HasValue?Model.PurchasePrice.Value.ToString("N0"): "Liên Hệ") VNĐ</span></p>
                    </div>
                    <p style="min-width:2000px">Mã sản phẩm: @Model.ProductId</p>
                    <p>Xuất xứ: @Model.Region</p>
                    <p>Năm rượu: @Model.Vintage</p>
                    <p>Thể tích: @Model.Capacity ml</p>
                    <p>Hiện còn: @Model.Quantity sản phầm</p>
                    <div class="share-desc">
                        <div class="share">
                            <p>Chia sẻ sản phẩm :</p>
                            <ul>
                                <li><a href="#"><img src="/assets/user/images/facebook.png" alt="" /></a></li>
                                <li><a href="#"><img src="/assets/user/images/twitter.png" alt="" /></a></li>
                            </ul>
                        </div>
                        <div class="button"><span><a href="/them-gio-hang?productId=@Model.ProductId&quantity=1">Thêm vào giỏ</a></span></div>
                        <div class="clear"></div>
                    </div>
                    <div class="wish-list">
                        <ul>
                            <li class="wish"><a href="#">Thêm vào yêu thích</a></li>
                            <li class="compare"><a href="#">So sánh</a></li>
                        </ul>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="product_desc">
                <div id="horizontalTab">
                    <ul class="resp-tabs-list">
                        <li>Chi tiết sản phẩm</li>
                        <div class="clear"></div>
                    </ul>
                    <div class="resp-tabs-container">
                        @Html.Raw(Model.Description);
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#horizontalTab').easyResponsiveTabs({
                        type: 'default', //Types: default, vertical, accordion
                        width: 'auto', //auto or any width like 600px
                        fit: true   // 100% fit in a container
                    });
                });
            </script>
            <div class="content_bottom">
                <div class="heading">
                    <h3>Sản phẩm liên quan</h3>
                </div>
                <div class="see">
                    <p><a href="/xem-tat-ca-san-pham">Xem tất cả</a></p>
                </div>
                <div class="clear"></div>
            </div>
            <div class="section group">
                @foreach (var i in relatedProducts)
                {

                    <div class="grid_1_of_4 images_1_of_4">
                        <a href="/product/details/@i.ProductId"><img src="~/Assets/User/images/@i.Image" alt="" /></a>
                        <h2>@i.ProductName </h2>
                        <div class="price-details">
                            <div class="price-number">
                                <p><span class="rupees">@(i.PurchasePrice.HasValue?i.PurchasePrice.Value.ToString("N0"):"Liên Hệ")</span></p>
                            </div>
                            <div class="add-cart">
                                <h4><a href="/them-gio-hang?productId=@i.ProductId&quantity=1">Thêm vào giỏ</a></h4>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="rightsidebar span_3_of_1">
            @{ Html.RenderAction("ProductCatalogy", "Product");}

        </div>
    </div>
</div>



