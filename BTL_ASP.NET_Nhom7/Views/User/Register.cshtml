@model BTL_ASP.NET_Nhom7.Models.Custom.RegisterModel
<style>
    .frm{
        width:fit-content;
        margin:0 auto;
        border: 1px solid black;
        border-radius:5px;
        padding:10px;
    }
    .frm input{
        display:block;
        padding:5px 10px;
        border-radius:5px;
        border:1px solid black;
    }
    .frm > *{
        margin:15px;
    }
    .frm span{
        display:block;
    }
</style>
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content" >


    @using (Html.BeginForm("Register","User",FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <div class="frm">
        <h4 style="font-weight:bold; text-align:center">Đăng ký thành viên</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }

                @Html.TextBoxFor(model => model.UserName, new {@placeholder = "Tên đăng nhập"})
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                @Html.PasswordFor(model => model.Password, new { @placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                @Html.PasswordFor(model => model.ConfirmPassword, new { @placeholder = "Xác nhận mật khẩu" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })


                @Html.TextAreaFor(model => model.Address, new { @placeholder = "Địa chỉ" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })


                @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })



                @Html.TextBoxFor(model => model.Phone, new { @placeholder = "Số điện thoại" })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })


        <div>
            <div >
                <input type="submit" value="Đăng ký" class="btn btn-success" />
            </div>
        </div>
    </div>
    }
</div>
